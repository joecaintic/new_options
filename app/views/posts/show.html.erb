<h1><%= markdown_to_html @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small>
    <p><%= markdown_to_html @post.body %><%= image_tag(@post.image) if @post.image? %></p>
  </div>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading"></h4>
        <% if @post.summary %>
          <p>Summary: <%= @post.summary.description %></p>
          <% end %>
        </div>
      </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
    <%= link_to "Edit Post", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
         <% if policy(Summary.new).create? %>
       <%= link_to "New Summary", new_topic_post_summary_path(@topic, @post, @summary), class: 'btn btn-success' %>
        <% end %>
  </div>
</div>
