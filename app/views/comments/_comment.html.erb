<% @comments.each do |comment| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to (markdown_to_html comment.body), [@post, comment] %>
           </h4>
           <small>
            submitted <%= time_ago_in_words(post.created_at) %> ago by
            <%= comment.user.name %><br>
          </small>
         </div>
       </div>
     <% end %>